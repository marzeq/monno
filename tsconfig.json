{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		"examples/**/*",
	],
	"include": [
		"src/**/*",
	]
}